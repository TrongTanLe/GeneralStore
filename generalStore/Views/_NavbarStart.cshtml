<div class="container-fluid">
    <div class="row border-top px-xl-5">
        @await Component.InvokeAsync("Navbar")
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a href="/" class="nav-item nav-link active">Trang chủ</a>
                        <a href="/shop" class="nav-item nav-link">Cửa hàng</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Trang</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a href="/carts" class="dropdown-item">Giỏ hàng</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="/checkout" class="dropdown-item">Thanh toán</a>
                                }
                                else
                                {
                                    <a href="/dang-nhap?returnUrl=/checkout" class="dropdown-item">Thanh toán</a>
                                }
                            </div>
                        </div>
                        <a href="/contact" class="nav-item nav-link">Liên hệ</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="/logout" as class="nav-item nav-link">Đăng xuất</a>
                        }
                        else
                        {
                            <a href="/dang-nhap" class="nav-item nav-link">Đăng nhập</a>
                            <a href="/dang-ky" class="nav-item nav-link">Đăng ký</a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>