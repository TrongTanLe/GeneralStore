@model List<generalStore.Models.ViewModels.CartItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-5">
    @if (Model == null && Model.Count() <= 0)
    {
        <div class="text-center mb-4">
            <h2 class="section-title px-5">
                <span class="px-2">
                    There are no products in the cart
                </span>
            </h2>
        </div>
    }
    else
    {
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-bordered text-center mb-0">
                    <thead class="bg-secondary text-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle"><img src="img/product-1.jpg" alt="@item.Product.ProductName" style="width: 50px;"> @item.Product.ProductName</td>
                                <td class="align-middle">$@Model.Sum(x=>x.priceDiscount).ToString("#,##0")</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-primary btn-minus">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                        </div>
                                        <input data-mahh="@item.Product.ProductId" type="text" class="cartItem form-control form-control-sm bg-secondary text-center" value="@item.amount">
                                        <div class="input-group-btn">
                                            <button @*data-mahh="@item.Product.ProductId" value="@item.amount"*@ class="btn btn-sm btn-primary btn-plus">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">$@Model.Sum(x=>x.TotalMoney).ToString("#,##0")</td>
                                <td class="align-middle"><a class="removecart btn btn-sm btn-primary" data-mahh="@item.Product.ProductId"><i class="fa fa-times"></i></a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <form class="mb-5" action="">
                    <div class="input-group">
                        <input type="text" class="form-control p-4" placeholder="Coupon Code">
                        <div class="input-group-append">
                            <button class="btn btn-primary">Apply Coupon</button>
                        </div>
                    </div>
                </form>
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">$@Model.Sum(x=>x.TotalMoney).ToString("#,##0")</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold">$@Model.Sum(x=>x.TotalMoney + 10).ToString("#,##0")</h5>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="/Cart/Checkout" class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</a>
                        }
                        else
                        {
                            <a href="/dang-nhap?returnUrl=/checkout" class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</a>
                        }

                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            function loadHeaderCart() {
                $("#numberCart").load("/AjaxContent/Numbercart");
            }
            $(".removecart").click(function () {
                var productid = $(this).attr("data-mahh");
                $.ajax({
                    url: "api/cart/remove",
                    type: "POST",
                    dataType: "JSON",
                    data: {
                        productID: productid
                    },
                    success: function (result) {
                        if (result.success) {
                            loadHeaderCart();
                            window.location = 'carts';
                        }
                    },
                    error: function (rs) {
                        alert("Remove Cart Error");
                    }
                });
            });
            $(".cartItem").click(function () {
                var productid = $(this).attr("data-mahh");
                var soluong = parseInt($(this).val());
                $.ajax({
                    url: 'api/cart/update',
                    type: "POST",
                    dataType: "JSON",
                    data: {
                        productID: productid,
                        amount: soluong
                    },
                    success: function (result) {
                        if (result.success) {
                            loadHeaderCart();
                            window.location = 'carts'
                        }
                    },
                    error: function (rs) {
                        alert("Update Cart Error");
                    }
                });
            });
        });
    </script>
}







